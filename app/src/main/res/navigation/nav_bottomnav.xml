<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bottomnav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.namo.ui.bottom.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_diaryDetailFragment2"
            app:destination="@id/diaryAddFragment" />
        <action
            android:id="@+id/action_homeFragment_to_diaryModifyFragment"
            app:destination="@id/diaryModifyFragment" />
    </fragment>

    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.example.namo.ui.bottom.diary.mainDiary.DiaryFragment"
        android:label="DiaryFragment"
        tools:layout="@layout/fragment_diary">
        <action
            android:id="@+id/action_diaryFragment_to_diaryModifyFragment"
            app:destination="@id/diaryModifyFragment" />
        <action
            android:id="@+id/action_diaryFragment_to_groupDiaryFragment"
            app:destination="@id/groupDiaryFragment" />
    </fragment>

    <fragment
        android:id="@+id/customFragment"
        android:name="com.example.namo.ui.bottom.custom.CustomFragment"
        android:label="CustomFragment"
        tools:layout="@layout/fragment_custom"/>
    <fragment
        android:id="@+id/groupListFragment"
        android:name="com.example.namo.ui.bottom.group.GroupListFragment"
        android:label="GroupListFragment"
        tools:layout="@layout/fragment_group_list">
        <action
            android:id="@+id/action_grouplistFragment_to_groupAddFragment"
            app:destination="@id/groupAddFragment" />
        <action
            android:id="@+id/action_groupListFragment_to_groupCalendarFragment"
            app:destination="@id/groupCalendarFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupAddFragment"
        android:name="com.example.namo.ui.bottom.group.CreateGroupFragment"
        android:label="GroupAddFragment"
        tools:layout="@layout/fragment_group_create">
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.namo.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.example.namo.ui.splash.OnBoardingFragment"
        android:label="OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_termsFragment"
            app:destination="@id/termsFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/termsFragment"
        android:name="com.example.namo.ui.login.TermsFragment"
        android:label="TermsFragment"
        tools:layout="@layout/fragment_terms">
        <action
            android:id="@+id/action_termsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.namo.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/termsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/diaryAddFragment"
        android:name="com.example.namo.ui.bottom.diary.mainDiary.DiaryAddFragment"
        android:label="DiaryAddFragment"
        tools:layout="@layout/fragment_diary_add">
    </fragment>
    <fragment
        android:id="@+id/diaryModifyFragment"
        android:name="com.example.namo.ui.bottom.diary.mainDiary.DiaryModifyFragment"
        android:label="DiaryModifyFragment" />
    <fragment
        android:id="@+id/groupDiaryFragment"
        android:name="com.example.namo.ui.bottom.diary.groupDiary.GroupDiaryFragment"
        android:label="GroupDiaryFragment" />
    <fragment
        android:id="@+id/groupCalendarFragment"
        android:name="com.example.namo.ui.bottom.group.calendar.GroupCalendarFragment"
        android:label="GroupCalendarFragment"
        tools:layout="@layout/fragment_group_calendar"/>
</navigation>